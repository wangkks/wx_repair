/* pages/clockIn/index.wxss */
.clockin{
    padding: 20rpx;
    text-align: center;
}
.clockin image{
    width: 248rpx;
    height: 249rpx;
    display: block;
    margin: 100rpx auto;
}
.title{
    margin-top: 100rpx;
    flex: 1;
    text-align: center;
}
.inputCodeBox{
    margin-top: 300rpx;
}
.inputCodeContent{
    height: 60rpx;
    padding: 0 70rpx;
}
.inputCodeContent .pos{
    display: flex;
}
.inputCodeContent .posV{
    width: 60rpx;
    height: 60rpx;
    text-align: center;
    border-bottom: 2rpx solid #007eba;
    display: block;
    margin-right: 50rpx;
}
.inputCodeContent .cursor{
    width: 1px;
    height: 50rpx;
    background-color: #000;
    animation: focus 1s infinite;
    margin-left: 20rpx;
}
.inputCodeContent .pos:last-child text{
    margin-right: 0;
}
input{
    margin-left: -120%;
    height: 40rpx;
}
.button{
    display: flex;
    justify-content: center;
    margin-top: 86rpx;
}
.button text{
    width: 272rpx;
    height: 52rpx;
    background-color: #007eba;
    font-size: 30rpx;
    color: #fff;
    border-radius: 36rpx;
    display: inline-block;
    text-align: center;
    line-height: 52rpx;
}
/* 光标动画 */
@keyframes focus {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}