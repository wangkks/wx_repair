.iconVio{
    width: 248rpx;
    height: 248rpx;
}
.addBtn{
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    background-color: #007cbd;
    font-size: 38rpx;
    color: #fff;
    border-radius: 36rpx;
    margin: 20rpx 0 0 0;
    float: right;
    line-height: 42rpx;
}
.deleteBtn{
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    background-color: #fff;
    font-size: 38rpx;
    color: #898989;
    border-radius: 36rpx;
    margin: 20rpx 20rpx 0 0;
    float: right;
    border: 1rpx solid #bbb;
    box-sizing: border-box;
    margin-left: 20rpx;
    line-height: 42rpx;
}
.footer{
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    background-color: #fff;
    text-align: center;
    padding-top: 20rpx;
}
.footer text{
    width: 120rpx;
    height: 55rpx;
    line-height: 55rpx;
    text-align: center;
    background-color: #007cbd;
    font-size: 30rpx;
    color: #fff;
    display: inline-block;
    border-radius: 36rpx;
    margin-right: 20rpx;
}
.footer text:last-child{
    margin-right: 0;
}