.headbox{
    width: 100%;
    background-color: #007cbd;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999;
    margin: 0 auto;
    display: flex;
    padding: 60rpx 0 10rpx;
    align-items: center;
    color: #fff;
}
.login{
    display: flex;
    padding-left: 30rpx;
}
.login image{
    width: 75rpx;
    height: 75rpx;
    margin-right: 10rpx;
}
.login .user_name{
    font-size: 24rpx;
    color: #fff;
}
.login .user_name .name{
    padding-top: 6rpx;
    display: block;
}
.login .user_name .user_type{
    font-size: 18rpx;
    display: block;
}
.headbox .cover_view_si{
    text-align: center;
    position: fixed;
    left: 50%;
    margin-left: -32rpx;
    z-index: 999;
}